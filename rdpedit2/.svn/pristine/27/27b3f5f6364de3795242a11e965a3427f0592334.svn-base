.layui-tab {
    margin: 0;
}
 
.layui-tab-title{
    height: 30px;
}
.layui-tab-title .layui-this:after {
	border: 0px;
    height: 30px;
}
.layui-tab-content {
     /* padding: 0px 2px 0px 2px;  */
	 padding: 0px 0px 0px 0px;
     height: 100%;
}
.layui-tab-item {
    height: 100%;
}
/*叶签栏样式*/
.layui-tab-card>.layui-tab-title {/* 第一代子元素 */
    background-color: #aeaeae;
	padding-left:5px;//
	color:#bfbfbf;
	height:25px; 
	border-top:none;/* 1px solid #c8c8c8; */
	border-bottom:1px solid #aeaeae;
}
/*选中的叶签*/
.layui-tab-card>.layui-tab-title .layui-this {
	color:#444444;             
    height:20px;
	background-image:linear-gradient(#c8c8c8, #eeeeee);
	border-right:1px solid #666765;
	border-left:1px solid #666765;
	border-bottom:1px solid #666765;
}
/*叶签样式*/
.layui-tab-title li {
    line-height: 20px;
	font-size:12px;
	color:#bfbfbf;
	font-family:宋体;
	padding:0px;
	border-bottom-right-radius:5px;
	border-bottom-left-radius:5px;
	border-right:1px solid #545454;
	border-left:1px solid #545454;
	border-bottom:1px solid #545454;
	background-image:linear-gradient(#3a3b38, #50514e);
}
#fileTabContent{
	height:651px;
}

.layui-tab-card {border: none;}
