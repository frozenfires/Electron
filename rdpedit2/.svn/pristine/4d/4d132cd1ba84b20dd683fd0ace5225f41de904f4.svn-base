
body{background: none;}

/*居中样式*/
.center{text-align: center}

div.window{height: auto; width: auto; -webkit-box-shadow: 2px 2px 19px #808080;}
div.window.common{background-color: #EFD100}
a.stepa.common div:before {content: ''; margin-right: 2px; border-left: 5px solid #daa100;}

div.window span{display: block;}

div.window a{display: block;}
div.window a:hover{color: #1d8267; }
div.window a:visited{color: #000;}
div.window a:active{color: #000;}

div.window .content{margin-left: 3px;}
div.window.CallStep a:before,
div.window.JumpStep a:before
{ content: '';border-left: 5px solid #daa100;position: absolute;left: 2px;height: 80%;}


/*错误节点样式 */
.window.error, .window.error:hover{
    box-shadow: 2px 2px 19px #F91414;
    -o-box-shadow: 2px 2px 19px #F91414;
    -webkit-box-shadow: 2px 2px 19px #F91414;
    -moz-box-shadow: 2px 2px 19px #F91414;
}

/*开始结束节点颜色*/
.endpoint{background-color: #008aff; color: #fff;}
.startpoint{background-color: #ff9600; color: #fff;}
/*空节点样式*/
.nullpoint{background-color: #ff9600; color: #fff;}

