.CallStep .stepid, .JumpStep .stepid{background-color: #2B7119; color: #fff;}
.CallStep a,.JumpStep a{color: #fff;}  */

.nouse{background-color: #AF0505; color: #fff;}
.nullNode{display: none;}


.explanation{padding-top: 10px; padding-bottom: 10px; height: auto; background-color: #0b84e9;}
.explanation div{ display: inline-block; vertical-align: middle;}
.explanation .rootRemark{font-weight: 600; font-size: 19px; color: #fff; position: absolute;    left: 10px;}

.releasenote{ position: absolute;    right: 10px;    font-size: 14px; }
.releasenote a{color:#fff}


div#main{padding-top: 30px;}

div._jsPlumb_overlay{text-shadow: #fff 1px 0 0,#fff 0 1px 0,#fff -1px 0 0,#fff 0 -1px 0;}





#main{
   height:100%;
   position: absolute;
}

#node-view{ 
	overflow:auto;
	height:100%; float: left;position: inherit;
	left: 0;position: absolute;
}
/*节点解析的样式*/
fieldset{width:177px}
#node-edit{
	font-size : 12px;
	font-family: 宋体;
	overflow:-Scroll;overflow-x:hidden;float: right;
	position: absolute;right: 0;width: 213px;
	height: 100%;
	line-height:20px;
}
#node-edit .legend{
	font-weight:800;
}
#node-edit input,#node-edit select{
	font:13px Arial;margin-bottom:4px;
} 
#node-edit select{
	width: 172px;
} 
/*参数中 横线样式*/
#nodeparam hr{
    border-top: 1px solid #6c6c6c;
    background-color: #c0c0c0;
    float: right;
    width: 6rem;
    margin: 10px 6px;
    margin-right: 20px;
}
/* 参数中 "+"号样式*/
#nodeparam legend .layui-icon{
	position: absolute;
    margin-left: 6.7rem;
    color: green;
}

/* 返回值中 横线样式*/
#nodereturn hr{
    border-top: 1px solid #6c6c6c;
    background-color: #c0c0c0;
    float: right;
    width: 5.1rem;
    margin: 10px 6px;
    margin-right: 24px;
}
/* 返回值中 "+"号样式*/
#nodereturn legend .layui-icon{
	position: absolute;
    margin-left: 6rem;
    color: green;
}

/*各参数、返回值间 横线样式*/
#node-edit #nodeparam .param,
#node-edit #nodereturn .return{
	border-bottom: 1px solid #c1c1c1;padding-bottom: 10px;
}

/*右键模态窗口样式*/
#rightClickNode,#rightClickLine{
	display:none;
	position: absolute;
	z-index: 3000;
	background: #eeeeee;
	padding-right:9px;
	border: 1px solid #e2e2e2;
    box-shadow:1px 2px 4px rgba(0,0,0,.12);
}
/*右键模态窗口样式*/
#rightClickNode ul.actions-container,#rightClickLine ul.actions-container{
	 display:block;
	 line-height:26px;
	 margin-left:25px;
	 z-index:3000;
	 border-left:1px solid #c8c8c8;
	 cursor:pointer;
	 font-family:宋体;
	 font-size: 12px;
	 color: #d0d0d0;
	 padding: 4px 4px;
}
/*空白节点样式*/
#newNode{
	box-shadow:2px 2px 19px #e0e0e0;
	border-radius:0.5em;
	position:absolute;
	padding:0.5em;
	width:80px;
	height:40px;
	background-color:white;
	border:1px solid #346789;
}
/*选择节点的样式*/
#kitchensink-demo >div.component.window.line-this{
    border: 1px solid #029DFA;
    -webkit-box-shadow: 0px 0px 20px #4BB8FF;
}


.layui-form select{
	display: block;
}
input{
	font-family:宋体;
}
.layui-icon{
	font-size: 13px;
    color: red;
    font-weight: 800;
    float: right;
    margin-right: 5px;
	cursor: pointer;
}
